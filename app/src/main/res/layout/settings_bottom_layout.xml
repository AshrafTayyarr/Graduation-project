<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialogbg"
    android:padding="16dp">


    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_remove_24"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/createText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/fontar"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:padding="8dp"
            android:text="@string/settings"
            android:textAlignment="viewStart"
            android:textColor="@color/lavender"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="10dp"
            android:contentDescription="Cancel"
            android:padding="10dp"
            android:src="@drawable/baseline_arrow_back_24" />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/layoutlang"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp">


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchLang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:thumb="@drawable/thumb"
            app:track="@drawable/track" />

        <TextView
            android:id="@+id/txtChangeLang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/lavender"
            android:fontFamily="@string/fontar"

            android:text="@string/change_language" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutThemes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone"
        tools:visibility="gone">


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:thumb="@drawable/thumb2"
            app:track="@drawable/track2" />

        <TextView
            android:id="@+id/txtChangeTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@string/fontar"
            android:text="@string/change_theme"

            android:textColor="@color/lavender" />
    </LinearLayout>

</LinearLayout>