<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient colors -->
    <gradient
        android:startColor="#5900F6"
        android:endColor="#90D2F4"
        android:type="linear"
        android:angle="120"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Add padding for shadow effect -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp"/>

    <!-- Shadow -->
    <stroke
        android:width="1dp"
        android:color="#F4B1B1"/>

</shape>
